
<div class="side-bar">
    <aside>

<h1>Musician Profile</h1>

<div class="userimg">
    <img src="{{musician.imageUrl}}" alt="{{username}}" srcset=""style="height:250px;width:200px;">
</div>
<ul>
<h2>{{musician.username}}</h2>

<br>

{{#if notifications}}
{{#each notifications}}
<div>
    <p>{{this.username}} wants to connect !</p>
    <a href="/connect/accept/{{this._id}}">Accept</a>
    <a href="/connect/decline/{{this._id}}">Decline</a>
</div>
{{/each}}
{{/if}}

<p>
    {{#each musician.bands}} 
    {{this}}
    {{/each}}
</p>

<p>
    {{#each musician.instruments}} 
    {{this}} 
    {{/each}}
</p>

<p>
    {{#each musician.genres}} 
    {{this}}
    {{/each}}
</p>
<p>
    {{#each musician.mediaLinks}} 
    {{this}}
    {{/each}}
</p>

<p>{{musician.mediaLinks}}</p>

{{#if isMyself}}
<a href="/profile/edit">Update My Profile</a>

{{else}}


{{#unless isMatch}}
<form action="/connect/{{musician._id}}" method="get">

{{#if isPending}}

<button disabled>Pending...</button>

{{else}}

<button type="submit"> Connect </button>

{{/if}}

</form>
{{/unless}}


{{/if}}
</ul> 

</aside>
</div>


