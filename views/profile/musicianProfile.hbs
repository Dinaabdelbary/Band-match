
<div class="side-bar">
    <aside>

<h1>Musician Profile</h1>

<div class="userimg">
    <img src="{{musician.imageUrl}}" alt="{{username}}" srcset=""style="height:250px;width:200px;">
</div>
<ul>
    {{#unless isMyself}}
<h2>{{musician.username}}</h2>
    {{/unless}}

<br>

{{#if notifications}}
{{#each notifications}}
<div>
    <p>{{this.username}} wants to connect !</p>
    <a href="/connect/accept/{{this._id}}">Accept</a>
    <a href="/connect/decline/{{this._id}}">Decline</a>
</div>
{{/each}}
{{/if}}

<p>
    {{#each musician.bands}} 
    {{this}}
    {{/each}}
</p>

<p>
    {{ musician.instruments}} 
   
    
</p>

<p>
    {{#each musician.genres}} 
    {{this}}
    {{/each}}
</p>
<p>
    {{#each musician.mediaLinks}} 
    {{this}}
    {{/each}}
</p>

<p>{{musician.mediaLinks}}</p>

{{#if isMyself}}
<a href="/profile/edit">Update My Profile</a>

{{else}}


{{#unless isMatch}}
<form action="/connect/{{musician._id}}" method="get">

{{#if isPending}}

<button disabled>Pending...</button>

{{else}}

<button type="submit"> Connect </button>

{{/if}}

</form>
{{/unless}}


{{/if}}
</ul> 

</aside>
</div>
{{!-- for messages btw musician --}}
<form action="/message/{{musician._id}}" method="post">
    <label for="messages"> Comment </label>
    <textarea name="messages"  id="messages" cols="40" rows="4"></textarea>
    <button type="submit">Send</button>
</form>

{{#each messages}}
{{this}}
{{/each}}


<div>
    <h3>connnections</h3>
{{#each successfulMatch}}

<div class="col-md-4">
  <div class="card">
    <img
      class="card-img-top"
      src="{{this.imageUrl}}"
      alt=""
    />
    <div class="card-body">
      <h5 class="card-title">{{this.username}}</h5>
      <p class="card-text"> {{this.instruments}}
    <a href="{{this._id}}">See more</a></p>
    </div>
  </div>
</div>
{{/each}}
</div>
